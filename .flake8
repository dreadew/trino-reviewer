[flake8]
max-line-length = 88
extend-ignore = 
    E203,
    W503,
    E501
exclude = 
    .git,
    __pycache__,
    .venv,
    .pytest_cache,
    migrations,
    alembic,
    src/generated
per-file-ignores =
    # Tests can use assert and redefine fixtures
    tests/*:S101,F811
    # __init__.py files can have unused imports
    __init__.py:F401